{% extends 'base.html1.twig' %}


{% block title "Next immobilier" %}

{% block body %}


    // TODO : FIX TOASTER
    {% for message in app.flashes('success') %}
        <script>
            window.toastr = toastr;
                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "newestOnTop": true,
                    "progressBar": true,
                    "positionClass": "toast-top-right",
                    "preventDuplicates": true,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "5000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                };
                toastr.success(mess);

        </script>
    {% endfor %}
    <!-- Hero section -->
    <section class="hero-section set-bg" id="setbg" data-setbg="./images/bg.jpg">
        <div class="container hero-text text-white">
            <h2>find your place with our local life style</h2>
            <p>Search real estate property records, houses, condos, land and more on leramiz.com®.<br>Find property info from the most comprehensive source data.</p>
            <a href="#" class="site-btn">VIEW DETAIL</a>
        </div>
    </section>
    <!-- Hero section end -->


    <!-- Filter form section -->
    <div class="filter-search">
        <div class="container">
            <form class="filter-form">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col">
                        <input type="text" value="" placeholder="Lieux" id="search_address" style="width: 100%;" class="form-control">
                    </div>
                    <div class="col wi100">
                        {{ form_row(form.distance) }}
                    </div>
                    <button class="site-btn fs-submit">SEARCH</button>
                </div>

                <div class="hidden" style="display: none">
                    {{ form_rest(form) }}
                </div>
                {{ form_end(form) }}

            </form>
        </div>
    </div>
    <!-- Filter form section end -->

    <!-- Properties section -->
    <section class="properties-section spad">
        <div class="container">
            <div class="section-title text-center">
                <h3>RECENT PROPERTIES</h3>
                <p>Discover how much the latest properties have been sold for</p>
            </div>
            <div class="row">
                {% for property in properties %}
                <div class="col-md-6">
                            {%  if property.picture %}
                                <div class="propertie-item set-bg" data-redirect="{{ path('property.show', {slug: property.slug, id: property.id }) }}" data-setbg="img/propertie/1.jpg" style="background-image: url('{{ vich_uploader_asset(property.picture, 'imageFile') | imagine_filter('thumb') }}')">
                            {% else %}
                                <div class="propertie-item set-bg" data-redirect="{{ path('property.show', {slug: property.slug, id: property.id }) }}" data-setbg="img/propertie/1.jpg" style="background-image: url('{{ 'images/properties/empty.jpg' | imagine_filter('thumb') }}')">
                            {% endif %}
                            <div class="sale-notic">FOR SALE</div>
                            <div class="propertie-info text-white">
                                <div class="info-warp">
                                    <h5>{{ property.title }}</h5>
                                    <p><i class="fa fa-map-marker"></i>{{ property.city }}, {{property.postalCode}} NY 14626</p>
                                </div>
                                <div class="price">{{ property.formatedPrice }}€</div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <!-- Properties section end -->


